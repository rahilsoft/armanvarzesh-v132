{
  "expo": {
    "name": "آرمان ورزش",
    "slug": "arman-user",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "scheme": "arman-user",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#0b1020"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.armanvarzesh.user",
      "infoPlist": {
        "NSCameraUsageDescription": "برای ثبت تصاویر پیشرفت و ارسال به مربی",
        "NSPhotoLibraryUsageDescription": "برای انتخاب تصاویر از گالری",
        "NSMicrophoneUsageDescription": "برای تماس تصویری با مربی",
        "NSFaceIDUsageDescription": "برای ورود سریع به برنامه"
      }
    },
    "android": {
      "package": "com.armanvarzesh.user",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0b1020"
      },
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "USE_BIOMETRIC",
        "USE_FINGERPRINT"
      ],
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-secure-store",
      "expo-local-authentication",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#0b1020",
          "sounds": ["./assets/notification.wav"]
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "برای ثبت تصاویر پیشرفت"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "برای انتخاب تصاویر از گالری"
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "arman-varzesh-user"
      }
    }
  }
}
